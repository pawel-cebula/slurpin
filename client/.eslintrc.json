{
  "root": true,
  "env": {
    "browser": true,
    "amd": true,
    "node": true,
    "es2021": true,
    "cypress/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier", "react", "react-hooks", "cypress"],
  "rules": {
    "prettier/prettier": "error",
    "no-console": "off",
    "camelcase": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prop-types": [0],
    "no-nested-ternary": "off",
    "no-unused-vars": ["error", { "vars": "local" }],
    "radix": [0]
  }
}
